{
  "name": "aibump",
  "version": "3.7.0",
  "description": "AI-powered CLI tool that analyzes git changes and automatically bumps npm and Helm versions",
  "main": "dist/index.js",
  "bin": {
    "aibump": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "NODE_NO_WARNINGS=1 ts-node src/index.ts",
    "dev": "ts-node --watch src/index.ts",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check ."
  },
  "keywords": [
    "ai",
    "npm",
    "version",
    "git",
    "cli",
    "openai",
    "helm",
    "semantic-versioning"
  ],
  "author": "Çağrı Ekin <cagri@m102a.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cagriekin/aibump.git"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.5.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "execa": "^9.6.0",
    "js-yaml": "^4.1.0",
    "openai": "^5.23.1",
    "simple-git": "^3.28.0"
  }
}
